<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.YoMovies" />
    <!-- Base application theme. -->
    <style name="Theme.YoMovies" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. (top)-->
        <item name="android:statusBarColor" >@color/transparent</item>
        <!-- Navigation bar color. (Bottom) -->
        <item name="android:navigationBarColor" >
            @android:color/transparent
        </item>
    </style>


    <style name="PopupOverlay" parent="AppTheme" />

    <style name="Theme.YoMovies.RangeSliderStyle" parent="Widget.MaterialComponents.Tooltip">
        <item name="backgroundTint">@color/transparent</item>
    </style>

    <style name="AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!--        <item name="android:background">@color/colorDarkBlue</item>-->
        <!--        <item name="android:homeAsUpIndicator">@drawable/ic_left_arrow</item>-->
    </style>

</resources>